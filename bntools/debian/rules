#!/usr/bin/make -f
#
include /usr/share/cdbs/1/rules/debhelper.mk
SRCVER=$(shell echo "$(DEB_UPSTREAM_VERSION)" | sed -r 's/^(.*)\+(dfsg|pf|xivo).*$$/\1/')
DEB_TAR_SRCDIR := bntools
DEB_TARBALL := bntools_$(SRCVER).orig.tar.gz 
include /usr/share/cdbs/1/rules/tarball.mk
include /usr/share/cdbs/1/rules/patchsys-quilt.mk
DEB_PATCHDIRS = $(CURDIR)/patches
include /usr/share/cdbs/1/class/makefile.mk
DEB_MAKE_CLEAN_TARGET   = clean
DEB_MAKE_BUILD_TARGET   = all
DEB_MAKE_INSTALL_TARGET = install DESTDIR=$(CURDIR)/debian/bntools
DEB_MAKE_INVOKE = $(DEB_MAKE_ENVVARS) make -C $(DEB_BUILDDIR)
